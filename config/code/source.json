{
    "config":{
        "defaultSuffix":".json",
        "suffixes":{
            ".json":{
                "meta":"code.meta.config",
                "template":"code.template.config"
            }
        }
    },
    "src":{
        "defaultSuffix":".fn.js",
        "suffixes":{
            ".fn.js":{
                "meta":"code.meta.script.function",
                "template":"code.template.script.function"
            },
            ".class.json":{
                "meta":"code.meta.class",
                "template":"code.template.script.class"
            }
        }
    },
    "debug":{
        "defaultSuffix":".js",
        "suffixes":{
            ".js":{
                "meta":"code.meta.script.function",
                "template":"code.template.script.debug"
            },
            ".html":{
                "meta":"code.meta.html",
                "template":"code.template.html"
            }
        }
    },
    "css":{
        "defaultSuffix":".scss",
        "suffixes":{
            ".scss":{
                "meta":"code.meta.scss",
                "template":"code.template.scss"
            },
            ".scope.scss":{
                "meta":{
                    "name":"code.meta.scss",
                    "params":{
                        "scoped":true
                    }
                },
                "template":"code.template.scss"
            }
        }
    }
}