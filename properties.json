{
    "command":{
        "version":"command::version",
        "properties":"command::properties",
        "dependencies":"command::dependencies",
        "compile":"command::compile",
        "package":"command::package",
        "test":"command::test"
    },
    "scope":{
        "folders":{
            "src":"src",
            "config":"config",
            "command":"command",
            "html":"html",
            "test":"test"
        },
        "suffixes":{
            "command":[
                ".js"
            ],
            "src":[
                ".fn.js",
                ".class.js"
            ],
            "config":[
                ".json"
            ],
            "template":[
                ".js",
                ".html"
            ],
            "test":[
                ".js",
                ".json"
            ]
        },
        "bin":{
            "command":{
                ".js":"bin"   
            },
            "src":{
                ".fn.js":"bin",
                ".class.js":"bin"
            },
            "config":{
                ".json":"json"
            },
            "template":{
                ".js":"text",
                ".html":"text"
            },
            "test":{
                ".js":"bin",
                ".json":"json"
            }
        },
        "default":"src"
    },

    "path":{
        "dist":"dist",
        "bin":"bin",
        "lib":"lib"
    },

    "compile":{
        "command":{
            ".js":{
                "from":"code.compile.from.script.function",
                "to":"code.compile.to.script.application"
            }
        },
        "src":{
            ".fn.js":{
                "from":"code.compile.from.script.function",
                "to":"code.compile.to.script"
            },
            ".class.js":{
                "from":"code.compile.from.script.class",
                "to":"code.compile.to.script"
            }
        },
        "test":{
            ".js":{
                "from":"code.compile.from.script.function.test",
                "to":"code.compile.to.script"
            }
        }
    },
    "package":{
        "default":{
            "includes":"*",
            "scope":{
                "src":{
                    ".fn.js":"code.package.from.script.function",
                    ".class.js":"code.package.from.script.class"
                }
            },
            "to":"code.package.to.script"
        }
    },
    "web":{
        "routers":{
            "/":"."
        },
        "port":3000
    }
}